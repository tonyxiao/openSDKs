{
  "name": "@opensdks/sdk-apollo",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "**/*.ts",
    "!**/*.spec.ts"
  ],
  "scripts": {
    "build": "concurrently npm:build:*",
    "build:ts": "tsc -p ./tsconfig.json",
    "clean": "rm -rf ./dist",
    "generate": "run-s generate:*",
    "generate:json": "npx tsx ./apollo.openapi.ts | prettier --parser json > ./apollo.oas.json",
    "generate:types": "openapi-typescript ./apollo.oas.json --output apollo.oas.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@opensdks/runtime": "workspace:*",
    "@opensdks/util-zod": "workspace:*",
    "concurrently": "^8.2.2",
    "openapi-typescript": "6.7.1",
    "prettier": "3.1.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
